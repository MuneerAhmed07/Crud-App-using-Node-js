<%- include("layout/header")  %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Edit User (<%= users.name %>)</h3>
                </div>
                <div class="card-body p-4">
                    <form action="/update/<%= users._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name" class="fw-bold mb-1">Name<span class="text-danger"> *</span></label>
                            <input type="text" id="name" name="name" class="form-control" placeholder="Enter Your Name" value="<%= users.name %>" autocomplete="off" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="fw-bold mb-1">Email<span class="text-danger"> *</span></label>
                            <input type="email" id="email" name="email" class="form-control" placeholder="Enter Your Email" value="<%= users.email %>" autocomplete="off" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="fw-bold mb-1">Phone<span class="text-danger"> *</span></label>
                            <input type="number" id="phone" name="phone" class="form-control" placeholder="Enter Your Number" value="<%= users.phone %>" autocomplete="off" required>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="fw-bold mb-1">Select Image<span class="text-danger"> *</span></label>
                            <input type="file" name="image" id="image" class="form-control">
                            <img src="/<%= users.image %>" alt="" width="100" class="img-thumbnail mt-1">
                        </div>
                        <input type="hidden" name="old_image" value="<%= users.image %>">
                        <div class="mb-3 d-grid">
                            <input type="submit" value="Update User" name="submit" class="btn btn-primary">
                        </div>
                    </form>
                </div>
            </div> 
        </div>
    </div>
</div>

<%- include("layout/footer")  %>